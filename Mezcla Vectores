// Mezcla.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
#define MAX 100

using namespace std;

void cargarvector(int a[],int tam);
void mostrarvector(int a[],int tam);
void mezclar(int T[],int n,int x[],int m, int w[],int &z);

int main()
{
	int T[MAX],x[MAX],w[MAX],n,m,z;

	do{
		cout<<"Ingresar el valor: ";
		cin>>n;
		
	} while 
		((n<=0)||(n>MAX));
	do{
	cout<<"Ingresar el valor: ";
		cin>>m;
	} while 
		((m<=0)||(m>MAX));
	
	cargarvector(T,n);
	cargarvector(x,m);
	mezclar(T,n,x,m,w,z);
	mostrarvector(w,z);
	mostrarvector(T,n);

	getch();
	return 0;
}

void cargarvector(int a[],int tam)
{
	for (int i=0;i<tam;i++)
	{
		cout<<"Ingresar a["<<i<<"]";
		cin>>a[i];
	}
}

void mostrarvector(int a[],int tam)
{	
	for (int i=0;i<tam;i++)
	{
		cout<<"a["<<i<<"]"<<a[i]<<endl;
	
	}
}

void mezclar(int T[],int n,int x[],int m, int w[],int &z)
{
	int i=0,j=0,k=0;
    while ((i<n)&&(j<m))
		{
			if(T[i]< x[j])
			{
			  w[k]=T[i];
	          i++;
		    }
		    else
			{
				w[k]=x[j];
	            j++;
			}
			k++;
	   }
	while (i<n)
	{ w[k]=T[i];
	  i++; 
	  k++;
	}
	while (j<m)
	{ w[k]=x[j];
	  j++; 
	  k++;
	}
	z=k;
}
