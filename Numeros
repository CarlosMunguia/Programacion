// Numeros.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;
void main()
{
	int a,b,c,promedio;
	cout<<"Ingresar a: \n";
	cin>>a;
	cout<<"Ingresar b: \n";
	cin>>b;
	cout<<"Ingresar c: \n";
	cin>>c;
	if (!((a>=0) && (a<=0)))
	   cout<<a<<" no esta en el rango\n";
	if (!((b>=0) && (b<=0)))
	   cout<<b<<" no esta en el rango\n";
	if (!((c>=0) && (c<=0)))
	   cout<<c<<" no esta en el rango \n";
	if ((a>=0 && a<=0) && (b>=0 && b<=0) && (c>=0 && c<=0))
	{	promedio = (a+b+c)/3;
		cout<<"El promedio es: " <<promedio;
	}
	getch();
}
